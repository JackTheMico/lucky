<Lucky>:
  numbers: numbers
  BoxLayout:
    orientation: 'vertical'
    padding: 5
    spacing: 5
    Label:
      font_size: 70
      center_x: root.center_x
      top: root.top - 50
      text: "Pick a few lucky numbers"
    Label:
      id: numbers
      font_size: 60
      center_x: root.center_x
      top: root.top - 150
      text: "00 00 00 00 00 || 00 00"
    Button:
      text: "Billionaire!!!"
      font_size: 70
      size: 300, 100
      center_x: root.center_x
      top: root.top - 240
      on_press: root.lucky()
